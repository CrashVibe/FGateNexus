{
    "name": "fgate-nexus",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "scripts": {
        "build": "nuxt build",
        "dev": "nuxt dev",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "start": "node .output/server/index.mjs",
        "db:generate": "drizzle-kit generate",
        "db:migrate": "drizzle-kit migrate",
        "build:all": "bun run build && bun run build:mac && bun run build:linux && bun run build:win && bun run copy:migrations",
        "build:mac": "bun build --compile --target=bun-darwin-arm64 ./entry.ts --outfile ./dist/FGate-Nexus-mac-arm64 && bun build --compile --target=bun-darwin-x64 ./entry.ts --outfile ./dist/FGate-Nexus-mac-x64",
        "build:linux": "bun build --compile --target=bun-linux-arm64 ./entry.ts --outfile ./dist/FGate-Nexus-linux-arm64 && bun build --compile --target=bun-linux-x64 ./entry.ts --outfile ./dist/FGate-Nexus-linux-x64",
        "build:win": "bun build --compile --target=bun-windows-x64 ./entry.ts --outfile ./dist/FGate-Nexus-win-x64.exe",
        "copy:migrations": "node -e \"const fs=require('fs'); const path=require('path'); if(fs.existsSync('./migrations')) { fs.cpSync('./migrations', './dist/migrations', {recursive: true}); }\""
    },
    "dependencies": {
        "@libsql/client": "^0.15.10",
        "@nuxt/eslint": "^1.8.0",
        "@nuxtjs/tailwindcss": "6.14.0",
        "@vicons/ionicons5": "^0.13.0",
        "@vueuse/core": "^13.6.0",
        "alova": "^3.3.4",
        "better-sqlite3": "^12.2.0",
        "class-validator": "^0.14.2",
        "crossws": "0.4.1",
        "dotenv": "^17.2.1",
        "drizzle-kit": "^0.31.4",
        "drizzle-orm": "^0.44.4",
        "http-status-codes": "^2.3.0",
        "module-alias": "^2.2.3",
        "naive-ui": "^2.42.0",
        "nuxt": "^4.0.3",
        "nuxtjs-naive-ui": "1.0.2",
        "philia-onebot": "^1.4.1",
        "uuid": "^11.1.0",
        "vooks": "^0.2.12",
        "vue": "^3.5.18",
        "vue-router": "^4.5.1",
        "zod": "^4.0.15"
    },
    "devDependencies": {
        "@types/bun": "^1.2.19",
        "@types/ws": "^8.18.1",
        "@vercel/ncc": "^0.38.3",
        "eslint": "^9.32.0",
        "less": "^4.4.0",
        "prettier": "^3.6.2",
        "typescript": "^5.9.2",
        "unplugin-auto-import": "^19.3.0",
        "unplugin-vue-components": "^28.8.0",
        "vue-tsc": "^3.0.5"
    }
}
